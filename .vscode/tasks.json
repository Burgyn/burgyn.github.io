{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create draft",
            "type": "shell",
            "command": "bundle exec jekyll draft ${input:draftName}"
        },
        {
            "label": "Run",
            "type": "shell",
            "command": "bundle exec jekyll serve --draft --future",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Move Draft to Posts",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "${workspaceFolder}/.vscode/move_draft_to_posts.sh",
                "${input:fileName}"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "focus": true
            }
        }
    ],
    "inputs": [
        {
            "id": "draftName",
            "description": "Post name:",
            "type": "promptString"
        },
        {
            "id": "fileName",
            "type": "promptString",
            "description": "Enter the name of the draft file to move:"
        }
    ]
}